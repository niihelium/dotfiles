sudo apt-get update
sudo apt-get install -y nodejs
sudo apt-get install -y nodejs-legacy
sudo apt-get install -y npm
sudo npm install -g npm
sudo npm install -g n
sudo n --stable
sudo ln -sf /usr/local/n/versions/node/$(n --stable)/bin/node /usr/bin/node
sudo ln -sf /usr/local/n/versions/node/$(n --stable)/bin/node /usr/bin/nodejs
